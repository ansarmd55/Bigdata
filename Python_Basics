if n<0:
                print ("The Absolute value of" , n ," is",-n)
                print ("The Absolute value of" , n ," is",-n)
                print ("The Absolute value of" , n ," is",-n)
                print ("The Absolute value of" , n ," is",-n)
else:
                print ("The Absolute value of" , n ," is", n)
                print ("The Absolute value of" , n ," is", n)
                print ("The Absolute value of" , n ," is", n)
                sumoftwo=50+60
                print(sumoftwo)
                
                
